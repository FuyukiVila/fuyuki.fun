---
export const prerender = false;
import MainGridLayout from "../layouts/MainGridLayout.astro";

import { getEntry, render } from "astro:content";
import Markdown from "@components/misc/Markdown.astro";
import I18nKey from "../i18n/i18nKey";
import { i18n } from "../i18n/translation";

const { slug } = Astro.params;

const slugToI18nKeyMap: Record<string, I18nKey> = {
    about: I18nKey.about,
    friend: I18nKey.friend,
};

if (!slug || !(slug in slugToI18nKeyMap)) {
    return new Response(null, {
        status: 404,
        statusText: "Not Found - Invalid or Missing Slug",
    });
}

const i18nKey = slugToI18nKeyMap[slug as keyof typeof slugToI18nKeyMap];

const specPost = await getEntry("spec", slug).catch(() => undefined);

if (!specPost) {
    throw new Error("page content not found");
}

const { Content } = await render(specPost);
---

<MainGridLayout title={i18n(i18nKey)} description={i18n(i18nKey)}>
    <div
        class="flex w-full rounded-[var(--radius-large)] overflow-hidden relative min-h-32"
    >
        <div class="card-base z-10 px-9 py-6 relative w-full">
            <Markdown class="mt-2">
                <Content />
            </Markdown>
        </div>
    </div>
</MainGridLayout>

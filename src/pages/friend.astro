---

import { getEntry, render } from "astro:content";
import Comment from "@components/Comment";
import Markdown from "@components/misc/Markdown.astro";
import I18nKey from "../i18n/i18nKey";
import { i18n } from "../i18n/translation";
import MainGridLayout from "../layouts/MainGridLayout.astro";

const friendPost = await getEntry("spec", "friend");

if (!friendPost) {
    throw new Error("Friend page content not found");
}

const { Content } = await render(friendPost);
---
<MainGridLayout title={i18n(I18nKey.friend)} description={i18n(I18nKey.friend)}>
    <div class="flex w-full rounded-[var(--radius-large)] overflow-hidden relative min-h-32">
        <div class="card-base z-10 px-9 py-6 relative w-full ">
            <Markdown class="mt-2">
                <Content />
            </Markdown>
        </div>
    </div>
    <Comment className="col-span-2 lg:col-span-1 block row-start-2" client:only="react"></Comment>

</MainGridLayout>